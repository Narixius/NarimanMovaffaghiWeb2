{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('booking') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('booking') }}
{% endblock %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table table-striped table-dark rounded-2 my-4" >
        <thead>
            <tr>
                <th>Id</th>
                <th>BedCount</th>
                <th>IsEmpty</th>
                <th>Hotel</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.bedCount }}</td>
                <td>{{ room.isEmpty ? 'Yes' : 'No' }}</td>
                <td>{{ room.hotel }}</td>
            </tr>
        </tbody>
    </table>

<div class="d-flex ">
    <a class="btn btn-warning mr-1" href="{{ path('app_room_index') }}">Back to list</a>

    <a class="btn btn-info mr-1" href="{{ path('app_room_edit', {'id': room.id}) }}">Edit</a>

    {{ include('room/_delete_form.html.twig') }}
</div>
{% endblock %}
