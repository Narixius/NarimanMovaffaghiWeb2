{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('booking') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('booking') }}
{% endblock %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel</h1>

    <table class="table table-striped table-dark rounded-2 my-4" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Stars</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.stars }}</td>
                <td>{{ hotel.score }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex ">
        <a  class="btn btn-warning mr-1"  href="{{ path('app_hotel_index') }}">Back to list</a>
        <a  class="btn btn-info mr-1"  href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">Edit</a>
        {{ include('hotel/_delete_form.html.twig') }}
    </div>
{% endblock %}
